      'locale' => TRUE,
    ),
    'entity keys' => array(
      'id' => 'id',
      'bundle' => 'type',
      'label' => 'label',
    ),
    'bundles' => array(),
    'bundle keys' => array(
      'bundle' => 'name',
    ),
    'access callback' => 'tourney_access',
    'module' => 'tourney',
  );

  // Add bundle info but bypass entity_load() as we cannot use it here.
  $types = db_select($entity_name . '_type', 'ttp')
    ->fields('ttp')
    ->execute()
    ->fetchAllAssoc('name');

  foreach ($types as $type => $info) {
    $return[$entity_name]['bundles'][$type] = array(
