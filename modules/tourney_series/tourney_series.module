  $entity_class = 'TourneySeries';

  $return[$entity_name] = array(
    'label' => $entity_name,
    'entity class' => $entity_class,
    'controller class' => 'EntityAPIController',
    'base table' => $entity_name,
    'fieldable' => TRUE,
    'uri callback' => 'tourney_uri',
    'static cache' => TRUE,
